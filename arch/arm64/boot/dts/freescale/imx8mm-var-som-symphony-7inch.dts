#include "imx8mm-var-som-symphony-legacy.dts"

&i2c1 {
	dsi_lvds_bridge: sn65dsi84@2c {
		ti,lvds-format = <2>;
		display-timings {
			lvds {
				clock-frequency = <0x1a52480>;
				hactive = <0x320>;
				vactive = <0x1e0>;
				hback-porch = <0x05>;
				hfront-porch = <0x69>;
				vback-porch = <0x2>;
				vfront-porch = <0x18>;
				hsync-len = <0x65>;
				vsync-len = <0x1a>;
			};
		};
	};
};

&i2c3 {
	/* Capacitive touch controller */
	touch@4b {
		compatible = "atmel,maxtouch";
		reg = <0x4b>;
		pinctrl-name = "default";
		pinctrl-0 = <&pinctrl_captouch>;
		interrupt-parent = <&gpio1>;
		interrupts = <2 0>;
		atmel,panel-coords = <0x0 0x0 0x31f 0x1df>;
		atmel,display-coords = <0x0 0x0 0x31f 0x1df>;
		vdd_ana-supplu = <0x2c>;
		irq-gpio = <&gpio1 2 1>;
		reset-gpio = <&gpio5 9 GPIO_ACTIVE_HIGH>;
	};
};
